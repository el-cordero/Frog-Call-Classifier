python3 -m venv venv
source venv/bin/activate
pip install --upgrade pip
pip install tensorflow==2.4.1 tensorflow-gpu==2.4.1 tensorflow-io matplotlib

# if this does not work then you will have to downgrade your version of python3
brew install pyenv
brew install pyenv-virtualenv

# If you're using zsh
exec zsh  
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init --path)"
eval "$(pyenv virtualenv-init -)"
echo 'export PATH="$HOME/.pyenv/bin:$PATH"' >> ~/.zshrc
echo 'eval "$(pyenv init --path)"' >> ~/.zshrc
echo 'eval "$(pyenv virtualenv-init -)"' >> ~/.zshrc
source ~/.zshrc

pyenv which python
pyenv install  3.8.18 

deactivate # if needed
pyenv local 3.8.18   # Set Python 3.10 only for this project
pyenv local 3.8.18   # Set Python 3.10 only for this project

python -m venv venv
source venv/bin/activate
python --version  # Should now show Python 3.8.18
pip install tensorflow==2.4.1 tensorflow-gpu==2.4.1 tensorflow-io matplotlib

python -m ensurepip --default-pip
python -m pip install --upgrade pip setuptools wheel

pip install tensorflow tensorflow-io matplotlib tensorflow-gpu # apple silicon

rm -rf venv

pyenv global 3.10.13
pyenv local 3.10.13

python -m venv venv
source venv/bin/activate
python --version  # Should now show Python 3.8.18
pip install tensorflow==2.4.1 tensorflow-gpu==2.4.1 tensorflow-io matplotlib

python -m ensurepip --default-pip
python -m pip install --upgrade pip setuptools wheel

rm -rf venv  # Remove old venv (Mac/Linux)
rmdir /s /q venv  # Remove old venv (Windows)

python -m venv venv  # Create a new virtual environment
source venv/bin/activate  # Activate (Mac/Linux)

pip install --upgrade pip
pip install tensorflow tensorflow-io matplotlib mediapipe ipykernel tensorflow-macos tensorflow-metal # apple silicon
pip install tensorflow-macos tensorflow-metal
pip uninstall tensorflow-io
pip install tensorflow-io\[tensorflow\] --no-cache-dir

pip uninstall tensorflow-io
pip install tensorflow-macos tensorflow-metal tensorflow-io matplotlib mediapipe ipykernel tensorflow==2.16.2 # apple silicon

pip install tensorflow-io
pip uninstall tensorflow tensorflow-io
pip install tensorflow==2.16.2 tensorflow-io
pip install librosa